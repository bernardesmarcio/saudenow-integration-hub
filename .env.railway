# Railway Environment Variables Template
# Copy these variables to Railway Dashboard > Settings > Environment

# ========================================
# SUPABASE CONFIGURATION
# ========================================
NEXT_PUBLIC_SUPABASE_URL=https://seu-projeto.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=sua-chave-anonima
SUPABASE_SERVICE_ROLE_KEY=sua-chave-service-role
DATABASE_URL=postgresql://postgres:senha@host:5432/database

# ========================================
# REDIS CONFIGURATION (Railway Add-on)
# ========================================
REDIS_URL=redis://default:password@host:port
BULL_REDIS_HOST=host
BULL_REDIS_PORT=port
BULL_REDIS_PASSWORD=password

# ========================================
# APPLICATION SETTINGS
# ========================================
NODE_ENV=production
PORT=3001
NEXTAUTH_URL=https://seu-app.railway.app
NEXTAUTH_SECRET=sua-secret-key-super-segura

# ========================================
# INTEGRATIONS
# ========================================
SAP_API_KEY=sua-chave-sap
SAP_BASE_URL=https://sap-api.com
RETAIL_PRO_API_KEY=sua-chave-retail-pro
RETAIL_PRO_BASE_URL=https://retail-pro-api.com
INTEGRATION_TIMEOUT=30000

# ========================================
# MONITORING & LOGGING
# ========================================
SENTRY_DSN=https://sua-chave@sentry.io/projeto
LOG_LEVEL=info
ENABLE_METRICS=true

# ========================================
# SECURITY
# ========================================
CORS_ORIGIN=https://seu-frontend.vercel.app
API_RATE_LIMIT=100
WEBHOOK_SECRET=sua-secret-webhook

# ========================================
# WORKERS CONFIGURATION
# ========================================
WORKER_CONCURRENCY=5
QUEUE_ATTEMPTS=3
QUEUE_BACKOFF=exponential
QUEUE_REMOVE_ON_COMPLETE=100
QUEUE_REMOVE_ON_FAIL=50