# Dockerfile - Middleware API
FROM node:18-alpine AS base

# Install dependencies only when needed
FROM base AS deps
RUN apk add --no-cache libc6-compat
WORKDIR /app

# Copy package files
COPY package*.json ./
COPY packages/middleware-api/package*.json ./packages/middleware-api/
RUN npm ci --only=production

# Rebuild the source code only when needed
FROM base AS builder
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY . .

# Build the middleware-api
WORKDIR /app/packages/middleware-api
RUN npm run build

# Production image
FROM base AS runner
WORKDIR /app

ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# Copy built application
COPY --from=builder /app/packages/middleware-api/.next/standalone ./
COPY --from=builder /app/packages/middleware-api/.next/static ./packages/middleware-api/.next/static
COPY --from=builder /app/packages/middleware-api/public ./packages/middleware-api/public

USER nextjs

EXPOSE 3001

ENV PORT=3001

CMD ["node", "packages/middleware-api/server.js"]