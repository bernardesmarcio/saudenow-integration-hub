{
  "name": "@saudenow/workers",
  "version": "0.0.1",
  "private": true,
  "description": "Background workers para processamento de jobs",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "redis:up": "docker-compose up -d redis",
    "redis:down": "docker-compose down",
    "redis:logs": "docker-compose logs -f redis",
    "test:sap": "tsx scripts/test-sap.ts",
    "start:local": "node scripts/start-local.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.3",
    "@types/express": "^4.17.23",
    "@types/lodash": "^4.17.20",
    "@types/node-cron": "^3.0.11",
    "axios": "^1.10.0",
    "bull": "^4.12.0",
    "bull-board": "^1.7.2",
    "dotenv": "^17.0.1",
    "express": "^4.21.2",
    "ioredis": "^5.3.2",
    "lodash": "^4.17.21",
    "node-cron": "^4.2.0",
    "p-retry": "^6.2.1",
    "pino": "^8.17.2",
    "pino-pretty": "^13.0.0",
    "retry-axios": "^3.1.3",
    "winston": "^3.17.0",
    "zod": "^3.25.75"
  },
  "devDependencies": {
    "@types/bull": "^4.10.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
